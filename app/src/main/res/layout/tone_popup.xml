<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="80dp"
    android:paddingVertical="50dp"
    android:orientation="vertical"
    android:background="@color/purple_500">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Select the tone you want to convey: "
        android:textColor="@color/white"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:fontFamily="sans-serif-medium"
        />

    <Button
        android:id="@+id/happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:backgroundTint="@color/white"
        android:text="normal"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_marginVertical="20dp"
        />
    <Button
        android:id="@+id/sad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/happy"
        android:backgroundTint="@color/white"
        android:text="sad"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_marginVertical="20dp"
        />
    <Button
        android:id="@+id/angry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sad"
        android:backgroundTint="@color/white"
        android:text="angry"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_marginVertical="20dp"
        />
    <Button
        android:id="@+id/excited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/angry"
        android:backgroundTint="@color/white"
        android:text="excited"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_marginVertical="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>