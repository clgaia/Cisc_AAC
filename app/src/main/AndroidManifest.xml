        android:supportsRtl="true"
        android:theme="@style/Theme.Cisc_AAC">
        <activity
            android:name=".little"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_little"
            android:theme="@style/Theme.Cisc_AAC.Fullscreen"></activity>
        <activity
            android:name=".things"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_things"
            android:theme="@style/Theme.Cisc_AAC.Fullscreen" />
        <activity
            android:name=".personal"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_personal"
            android:theme="@style/Theme.Cisc_AAC.Fullscreen" />
        <activity
            android:name=".greetings"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_greetings"
            android:theme="@style/Theme.Cisc_AAC.Fullscreen" />
        <activity
            android:name=".myself"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_myself"
            android:theme="@style/Theme.Cisc_AAC.Fullscreen" />
        <activity
            android:name=".time"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_time"
            android:theme="@style/Theme.Cisc_AAC.Fullscreen" />
        <activity
            android:name=".food"
            android:configChanges="orientation|keyboardHidden|screenSize"
